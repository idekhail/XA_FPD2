<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="25px"
    android:minHeight="25px"
    android:background="#ff455a64">
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout1"
        android:background="#ff9e9e9e"
        android:layout_margin="25px">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="59.0dp"
            android:id="@+id/textView1"
            android:padding="10px"
            android:background="#ff2d2828"
            android:layout_margin="20px"
            android:gravity="center"
            android:textColor="#fff7f7fa"
            android:textSize="30dp"
            android:text="Display Page" />
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="204.0dp"
            android:id="@+id/linearLayout3"
            android:gravity="center"
            android:background="#ff006064"
            android:layout_margin="10px">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="103.0dp"
                android:id="@id/screen"
                android:padding="10px"
                android:background="#fff7efef"
                android:layout_margin="10dp"
                android:gravity="center"
                android:textColor="#ff212121"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="Welcome back" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout2"
            android:gravity="top|center"
            android:background="#ff757575"
            android:layout_margin="20px">
            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/linearLayout4"
                android:gravity="center"
                android:background="#ff424242"
                android:layout_margin="40px">
                <Button
                    android:text="Close Application"
                    android:layout_width="247.0dp"
                    android:layout_height="72.0dp"
                    android:id="@+id/close"
                    android:layout_margin="10px"
                    android:padding="10px"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    app:backgroundTint="#ff455a64" />
            </LinearLayout>
         </LinearLayout>
    </LinearLayout>
</RelativeLayout>