<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="25px"
    android:minHeight="25px"
    android:background="#ff455a64">
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout1"
        android:background="#ff9e9e9e"
        android:layout_margin="25px">
        <TextView
            android:text="Main Page"
            android:layout_width="match_parent"
            android:layout_height="59.0dp"
            android:id="@+id/textView1"
            android:padding="10px"
            android:background="#ff2d2828"
            android:layout_margin="20px"
            android:gravity="center"
            android:textColor="#fff7f7fa"
            android:textSize="30dp" />
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="221.5dp"
            android:id="@+id/linearLayout3"
            android:gravity="center"
            android:background="#ff006064"
            android:layout_margin="20px">
            <EditText                           
                android:layout_width="match_parent"
                android:layout_height="66.5dp"
                android:id="@+id/username"
                android:padding="10px"
                android:background="#fff7f0f0"
                android:layout_margin="20dp"
                android:gravity="center"
                android:textColor="#ff1a237e"
                android:textSize="30dp"
                android:hint="Username" />
            <EditText  
               android:layout_width="match_parent"
                android:layout_height="66.5dp"
                android:id="@+id/password"
                android:padding="10px"
                android:background="#fff7f0f0"
                android:layout_margin="20dp"
                android:gravity="center"
                android:textColor="#ff1a237e"
                android:textSize="30dp"
                android:hint="Password" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout4"
            android:gravity="center"
            android:background="#ff757575"
            android:layout_margin="20px">
            <Button
                android:text="Login"                android:layout_width="wrap_content"
                android:layout_height="72.0dp"
                android:id="@+id/login"
                android:layout_margin="10px"
                android:padding="10px"
                android:textStyle="bold"
                android:textSize="20dp"
                app:backgroundTint="#ff455a64" />
            <Button
                android:text="Clear"                android:layout_width="wrap_content"
                android:layout_height="72.0dp"
                android:id="@+id/clear"
                android:layout_margin="10px"
                android:padding="10px"
                android:textStyle="bold"
                android:textSize="20dp"
                app:backgroundTint="#ff455a64"/>
            <Button
                android:text="Close"                android:layout_width="wrap_content"
                android:layout_height="72.0dp"
                android:id="@+id/close"
                android:layout_margin="10px"
                android:padding="10px"
                android:textStyle="bold"
                android:textSize="20dp"
                app:backgroundTint="#ff455a64"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>